    </div>
  </div>
</div>
<!-- END USER INFORMATION -->
<hr>


<!-- BALCONY INFORMATION -->

<% if !Balcony.find_by_user_id(@user) %>
  <div class="container m-t-60 m-b-60">
    <div class="row">
      <div class="col-sm-4 text-center">
        <%= link_to "Create your Balcony", new_balcony_path, class: "btn btn-sm btn-round btn-base"  %>
      </div>
      <div class="col-sm-8">
        <p>You have no balcony referenced yet, <b>click the button to create it.</b> </p>
      </div>
    </div>
  </div>

<% else %>

<div class="container m-t-60 m-b-60">
  <div class="row">
		<div class="col-sm-4">
      <div class="text-center center">
        <%= cl_image_tag Balcony.find_by_user_id(@user).photo, height: 200, width: 200, crop: :fill %>
        <br>
        <br>
        <%= link_to "show your balcony", profile_path(@user), class: "btn btn-sm btn-round btn-primary" %>
        <br>
        <%= link_to "Edit your balcony", profile_path(@user), class: "btn btn-sm btn-round btn-base" %>
        <br>
        <%= link_to "delete your balcony", profile_path(@user), class: "btn btn-sm btn-round btn-danger" %>
      </div>
    </div>
    <div class="col-sm-8">
      <p><b class = "margin">Your balcony name:</b><%= Balcony.find_by_user_id(@user).name %></p><hr>
      <p><b class = "margin">address</b><%= Balcony.find_by_user_id(@user).address %> </p><hr>
      <p><b class = "margin">orientation:</b><%= Balcony.find_by_user_id(@user).orientation %> </p><hr>
      <p><b class = "margin">department:</b> <%= Balcony.find_by_user_id(@user).department %> </p><hr>

      <br>
      <%= link_to "Delete", balcony_path(@user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %>
      <br>
    </div>
  </div>
</div>
<% end %>

<!-- END BALCONY INFORMATION -->
