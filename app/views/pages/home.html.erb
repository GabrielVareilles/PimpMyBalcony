        <!-- PORTFOLIO FILTERS -->
				<div class="row">
					<div class="col-sm-12">
						<ul id="filters" class="filters p-b-0">
							<li class="p-b-5"><a href="#" class="current" data-filter="*">All</a></li>
              <li class="p-b-5"><a href="#" data-filter=".small">Small</a></li>
							<li class="p-b-5"><a href="#" data-filter=".medium">Medium</a></li>
