        <div class="row">

          <div class="col-sm-8">
        		<!-- WORKS GRID -->
    				<div id="works-grid" class="works-grid works-grid-3">
              <!-- PORTFOLIO ITEM -->
              <% Balcony.all.first(6).each do |balcony| %>
    					<article class="work-item <%= balcony.model %>" style="padding: 10px 0px 0px 10px;">
    						<div class="work-wrapper">
                  <%= cl_image_tag balcony.photo, height: 400, width: 720, crop: :fill %>
    							<div class="work-overlay">
    								<div class="work-caption">
    									<h6 class="work-title"> <%= balcony.name %> </h6>
    									<span class="work-category"> <%= balcony.model %> </span>
    								</div>
    							</div>
                  <%= link_to '#', public_balcony_path(balcony), class: "work-link" %>
    						</div>
    					</article>
              <% end %>
    					<!-- END PORTFOLIO ITEM -->
    				</div>
    				<!-- END WORKS GRID -->
    			</div>

          <div class="col-sm-4">
            <div class="maps-container m-b-10" style="padding: 10px 10px 0px 0px;" >
              <!-- ADD YOUR ADDRESS HERE -->
              <% toto = [] %>
              <% tato = '' %>
              <% Balcony.all.each do |balcony|%>
                <% toto << [balcony.latitude, balcony.longitude] %>
                <% tato = toto.to_s[1..-2] %>
              <% end %>
              <div id="map" data-addresses="<%= tato %>" data-info="[Pimped balcony]" data-icon="assets/map-icon.png" data-zoom="5">
              </div>
            </div>
          </div>
        </div>
			<!-- END WORKS WRAPPER -->
