 <section class="divider-bottom">
   <div class="container">
     <div class="row">
       <div class="col-sm-12">
         <!-- START CARROUSSEL-->
         <div class="box-carousel p-t-40" data-carousel-options='{"items":"2", "navigation": true}'>
           <% Balcony.all.each do |balcony| %>
             <div class="item">
              <%= cl_image_tag balcony.photo, height: 400, width: 720, crop: :fill %>
              <p class="m-t-10 text-center"><%= balcony.user.first_name %>'s balcony</p>
              <%= link_to "Show", public_balcony_path(balcony), class: "btn btn-outline btn-base center-block" %>
             </div>
           <% end %>
         </div>
         <!-- END CAROUSEL-->
       </div>
     </div>
   </div>
