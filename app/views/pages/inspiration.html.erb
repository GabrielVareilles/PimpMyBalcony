 <!-- PORTFOLIO -->
  <section class="module-xs">
  	<div class="container">

  	<!-- PORTFOLIO FILTERS -->
  	<div class="row">
      <div class="col-sm-12">
        <ul id="filters" class="filters p-t-20 bg-white-dark">
          <li><a href="#" class="current" data-filter="*">All</a></li>
          <li><a href="#" data-filter=".pot">Pot</a></li>
          <li><a href="#" data-filter=".plant">Plant</a></li>
          <li><a href="#" data-filter=".deco">Deco</a></li>
        </ul>
      </div>
  	</div>
  	<!-- END PORTFOLIO FILTERS -->

  	<div class="works-grid-wrapper">
  		<!-- WORKS GRID -->
  		<div id="works-grid" class="works-grid works-grid-masonry works-grid-gutter works-grid-4">
        <% Item.all.first(16).each do |product| %>
  			<!-- PORTFOLIO ITEM -->
    			<article class="work-item brand p-t-20 p-b-20 <%= product.category.downcase %>">
    				<div class="work-wrapper">
    					<%= cl_image_tag product.photo %>
    					<div class="work-overlay">
    						<div class="work-caption">
                  <div class="work-title" style="text-align:center;">
                  </div>
    						</div>
    					</div>
              <%= link_to "", item_path(product.id), class: "work-link" %>
    				</div>
    			</article>
  			<!-- END PORTFOLIO ITEM -->
        <% end %>
      </div>
  		<!-- END WORKS GRID -->
    </div>
    </div>
  </section>
